{
  "name": "steplauncher",
  "version": "1.0.0",
  "description": "El Mejor Launcher de Minecraft No Premium",
  "main": "src/app.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NovaStepStudios/StepLauncher.git"
  },
  "keywords": [
    "Minecraft",
    "Minecraft-Launcher-Core",
    "Minecraft-Core-Master",
    "Forge",
    "Optifine",
    "NeoForge",
    "Fabric",
    "Clients",
    "Launcher",
    "Mc",
    "Launcher-Minecraft",
    "Electron",
    "App"
  ],
  "author": "NovaStepStudios",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/NovaStepStudios/StepLauncher/issues"
  },
  "homepage": "https://github.com/NovaStepStudios/StepLauncher#readme",
  "devDependencies": {
    "electron": "^36.4.0",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "adm-zip": "^0.5.16",
    "minecraft-launcher-core": "^3.18.2",
    "discord-rpc": "^4.0.1",
    "tar": "^7.4.3",
    "node-fecth": "^0.0.1-security",
    "unzipper": "^0.12.3"
  },
  "build": {
    "appId": "stepnicka.steplauncher",
    "productName": "StepLauncher",
    "directories": {
      "output": "Release"
    },
    "artifactName": "${platform}/${productName}-${version}.${ext}",
    "files": [
      "src/**/*",
      "package.json"
    ],
    "linux":{
      "icon": "./icons/linux.png",
      "target": "appimage",
      "category": "game"
    },
    "win": {
      "icon":"./icons/win.ico",
      "target": [
        "nsis"
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
